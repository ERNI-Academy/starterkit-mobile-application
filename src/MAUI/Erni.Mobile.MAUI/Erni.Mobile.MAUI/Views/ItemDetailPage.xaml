<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Erni.Mobile.MAUI.Views.ItemDetailPage"
             xmlns:helpers="clr-namespace:Erni.Mobile.MAUI.Helpers"
             Title="ItemDetailPage"
             BackgroundColor="White">
    <StackLayout Padding="15" Spacing="20">
        <Label FontSize="{StaticResource BodyText}" Text="{helpers:Translate ItemDetail_Text}" />
        <Label FontSize="{StaticResource BodyText}" Text="{Binding Text}" />
        <Label FontSize="{StaticResource BodyText}" Text="{helpers:Translate ItemDetail_Description}" />
        <Label FontSize="{StaticResource BodyText}" Text="{Binding Description}" />
    </StackLayout>
</ContentPage>